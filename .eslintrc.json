{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb", 
        "airbnb/hooks"
    ],
    "overrides": [
        {
          "files": [ "src/**/index.js" ]
        }
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "indent": ["error", 4],
        "react/jsx-indent": ["error", 4],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-filename-extension": 
        [1, { 
            "extensions": [".js", ".jsx"
            ] 
            }
        ]
    }
}
